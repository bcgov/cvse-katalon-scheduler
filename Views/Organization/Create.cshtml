@model Organization
@{
    ViewData["Title"] = "Create Organization";
}

<div class="card">
    <div class="card-header">
        <h2>Create New Organization</h2>
    </div>
    <div class="card-body">
        <form asp-area="Admin" asp-controller="Organization" asp-action="Create" method="post">
            <div class="row mb-3">
                <div class="col-md-4">
                    <label asp-for="Name" class="form-label">Organization Name</label>
                    <input asp-for="Name" class="form-control" required />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="col-md-4">
                    <label asp-for="KatalonOrganizationId" class="form-label">Organization ID</label>
                    <input asp-for="KatalonOrganizationId" class="form-control" required />
                    <span asp-validation-for="KatalonOrganizationId" class="text-danger"></span>
                </div>
            </div>
            <div class="mt-3">
                <button type="submit" class="btn btn-primary">Create Organization</button>
                <a asp-area="Admin" asp-controller="Admin" asp-action="Index" 
                   class="btn btn-secondary">Back to Admin</a>
            </div>
        </form>
    </div>
</div>